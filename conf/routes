# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)

# Equipments
GET         /equipments                   controllers.Application.equipments()
POST        /equipments                   controllers.Application.newEquipment()
POST        /equipments/:id/delete        controllers.Application.deleteEquipment(id: Long)


# Products
GET         /products                     controllers.Application.products(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
POST        /products                     controllers.Application.newProduct()
POST        /products/:id                 controllers.Application.editProduct(id: Long)
POST        /products/:id/delete          controllers.Application.deleteProduct(id: Long)
POST        /upload                       controllers.Application.upload()

#Categories
# Products
GET         /categories                     controllers.Application.categories(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
POST        /categories                     controllers.Application.newCategory()
POST        /categories/:id                 controllers.Application.editCategory(id: String)
POST        /categories/:id/delete          controllers.Application.deleteCategory(id: String)
